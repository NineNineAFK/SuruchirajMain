<%- include('partials/header') %>

<h1>Products</h1>
<div class="products">
  <% products.forEach(product => { %>
    <div class="product">
      <h2><%= product.product_name %></h2>
      <p>Price (50g): <%= product.mrp[0] %></p>
      <p>Price (100g): <%= product.mrp[1] %></p>
      <a href="/products/<%= product._id %>">View Details</a>
    </div>
  <% }) %>
</div>

<%- include('partials/footer') %>
