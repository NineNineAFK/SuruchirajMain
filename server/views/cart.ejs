<%- include('partials/header') %>

<h1>Your Cart</h1>
<div class="cart">
  <% if (cart.items.length > 0) { %>
    <% cart.items.forEach(item => { %>
      <div class="cart-item">
        <h2><%= item.productName %></h2>
        <p>50g Quantity: <%= item.qty_50g %></p>
        <p>100g Quantity: <%= item.qty_100g %></p>
        <p>Total Price: <%= (item.qty_50g * item.price_50g) + (item.qty_100g * item.price_100g) %></p>
        <form action="/cart/remove/<%= item.product %>" method="POST" style="display:inline;">
          <button type="submit">Remove</button>
        </form>
      </div>
    <% }) %>
    <h3>Total Amount: <%= cart.totalAmount %></h3>
    <form action="/cart/checkout" method="POST">
      <input type="hidden" name="totalAmount" value="<%= cart.totalAmount * 100 %>"> <!-- Amount in paise -->
      <button type="submit">Checkout</button>
    </form>
  <% } else { %>
    <p>Your cart is empty.</p>
  <% } %>
</div>

<%- include('partials/footer') %>
